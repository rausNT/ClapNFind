<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nf.co.thehoproject.clapnfind.Options">

    <com.daniribalbert.customfontlib.views.CustomFontTextView
        app:font="Lato-Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:textSize="24sp"
        android:textColor="@color/red_1000"
        android:id="@+id/title"
        android:layout_below="@+id/onoff"
        android:layout_centerHorizontal="true" />
<ScrollView
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.daniribalbert.customfontlib.views.CustomFontTextView
        app:font="CaviarDreams"
        android:gravity="center"
        android:scrollbars="vertical"
        android:padding="8dp"
        android:textColor="@color/white"
        android:background="@drawable/options_container_bg"
        android:layout_width="match_parent"
        android:minHeight="200dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/desc" />
</ScrollView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/onoff"
        android:src="@drawable/option_notification_button_on"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
